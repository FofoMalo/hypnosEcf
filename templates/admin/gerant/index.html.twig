{% extends 'adminbase.html.twig' %}

{% block title %}Gerant index{% endblock %}

{% block body %}

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Hotel Gerants</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Accueil</a></li>
              <li class="breadcrumb-item active">Gerant active</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Liste des Gerants</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
        <div class="card-body">
          <h1>Gerant index</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Password</th>
                    <th>Name</th>
                    <th>Create_at</th>
                    <th>Update_at</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for gerant in gerants %}
                <tr>
                    <td>{{ gerant.id }}</td>
                    <td>{{ gerant.email }}</td>
                    <td>{{ gerant.roles ? gerant.roles|json_encode : '' }}</td>
                    <td>{{ gerant.password }}</td>
                    <td>{{ gerant.name }}</td>
                    <td>{{ gerant.createAt ? gerant.createAt|date('Y-m-d') : '' }}</td>
                    <td>{{ gerant.updateAt ? gerant.updateAt|date('Y-m-d') : '' }}</td>
                    <td>
                        <a href="{{ path('app_gerant_show', {'id': gerant.id}) }}" class="btn btn-block btn-info">show</a>
                    </td>
                    <td>
                        <a href="{{ path('app_gerant_edit', {'id': gerant.id}) }}" class="btn btn-block btn-info">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucun Gerant trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
          <a href="{{ path('app_gerant_new') }}" class="btn btn-primary">Create new</a>
        </div>
        <!-- /.card-body -->  
        <div class="card-footer">
          Groupe hotelier hypsos
        </div>
        <!-- /.card-footer-->
      </div>
      <!-- /.card -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}
