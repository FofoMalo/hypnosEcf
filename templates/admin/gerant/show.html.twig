{% extends 'adminbase.html.twig' %}

{% block title %}Gerant{% endblock %}

{% block body %}
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Liste des Gerants</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/gerant">Accueil</a></li>
              <li class="breadcrumb-item active">Gerant active</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Groupe hotelier hypsos</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
        <div class="card-body">

            <h1>Gerant</h1>

            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ gerant.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ gerant.email }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ gerant.roles ? gerant.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Password</th>
                        <td>{{ gerant.password }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ gerant.name }}</td>
                    </tr>
                    <tr>
                        <th>Create_at</th>
                        <td>{{ gerant.createAt ? gerant.createAt|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Update_at</th>
                        <td>{{ gerant.updateAt ? gerant.updateAt|date('Y-m-d') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('app_gerant_index') }}" class="btn btn-info">back to list</a>

            <a href="{{ path('app_gerant_edit', {'id': gerant.id}) }}" class="btn">edit</a>

            {{ include('admin/gerant/_delete_form.html.twig') }}
        </div>
        <!-- /.card-body -->
      <div class="card-footer">
          h√¥tel Hypsos
        </div>
        <!-- /.card-footer-->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

{% endblock %}
