{% extends 'adminbase.html.twig' %}

{% block title %}Hotel{% endblock %}

{% block body %}

<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Créer les Hôtels</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Accueil</a></li>
              <li class="breadcrumb-item active">Hôtel active</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Vue Ensemble</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
        </div>
        <div class="card-body">
           <h1>Hotel</h1>

          <table class="table table-bordered">
              <tbody>
                  <tr>
                      <th>Id</th>
                      <td>{{ hotel.id }}</td>
                  </tr>
                  <tr>
                      <th>Name</th>
                      <td>{{ hotel.name }}</td>
                  </tr>
                  <tr>
                      <th>Town</th>
                      <td>{{ hotel.town }}</td>
                  </tr>
                  <tr>
                      <th>Adress</th>
                      <td>{{ hotel.adress }}</td>
                  </tr>
                  <tr>
                      <th>Description</th>
                      <td>{{ hotel.description }}</td>
                  </tr>
                  <tr>
                      <th>Image</th>
                      <td>{{ hotel.image }}</td>
                  </tr>
                  <tr>
                      <th>Create_at</th>
                      <td>{{ hotel.createAt ? hotel.createAt|date('Y-m-d H:i:s') : '' }}</td>
                  </tr>
                  <tr>
                      <th>Update_at</th>
                      <td>{{ hotel.updateAt ? hotel.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                  </tr>
              </tbody>
          </table>

              <a href="{{ path('app_hotel_index') }}">back to list</a>

              <a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">edit</a>

              {{ include('admin/hotel/_delete_form.html.twig') }}

        </div>
        <!-- /.card-body -->

    <div class="card-footer">
          hôtel Hypsos
        </div>
        <!-- /.card-footer-->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}
