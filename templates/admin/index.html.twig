{% extends 'adminbase.html.twig' %}

{% block title %}Admin{% endblock %}

{% block body %}
<!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Groupe Hotelier Hypsos</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">Page d'accueil</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Admin Panel</h3>

          <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
              <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
              <i class="fas fa-times"></i>
            </button>
          </div>
         </div>
          <div class="card-body">
            <h1>Bienvenue! Hypsos Groupe Hotelier</h1>
              <div class="card-body">
                <div class="info-box shadow-none">
                    <span class="info-box-icon bg-info"><i class="far fa-floppy"></i></span>
                    <div class="info-box-content">
                    <span class="info-box-text">New Room/Suites</span>
                    <span class="info-box-number">Suites</span>
                  <a href="{{ path('app_room_new') }}" class="btn btn-primary">Créer une nouvelle suite</a>
                    </div>
                </div>
                <div class="info-box shadow-none">
                    <span class="info-box-icon bg-info"><i class="far fa"></i></span>
                    <div class="info-box-content">
                    <span class="info-box-text">New Hôtel</span>
                    <span class="info-box-number">Hôtels</span>
                    <a href="{{ path('app_hotel_new') }}" class="btn btn-primary">Creer un nouveau hotel</a>
                    </div>
                </div>
                <div class="info-box shadow-none">
                      <span class="info-box-icon bg-info"><i class="far fa"></i></span>
                      <div class="info-box-content">
                      <span class="info-box-text">New-Gerant</span>
                      <span class="info-box-number">Gerant</span>
                      <a href="{{ path('app_gerant_new') }}" class="btn btn-primary">Créer nouveau gerant</a>
                      </div>
                </div>
              </div>
          </div><!-- /.card-body -->
        <div class="card-footer">
          hypsos_ecf_2022_Malo Florent
        </div><!-- /.card-footer-->
      </div> <!-- /.card -->
    </section><!-- /.content -->
  </div><!-- /.content-wrapper -->

{% endblock %}
